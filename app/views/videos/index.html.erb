  <div class="container">
      <div class="row text-center knovpad">
          <div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1">
              <p class="knov">
                Knovation partners with educators, districts, educational technology
                solution developers and content providers to design and implement
                innovative personalized learning solutions that reduce barriers to
                learning. Knovation’s solutions include the award-winning netTrekker and the icurio digital curriculum solution, professional learning and consulting services, a fully curated learning resource library, content contextualization services and more.
              </p>
          </div>
      </div>
      <div class="row text-center">
          <div class="col-md-4 col-sm-4 col-xs-12 portfolio-item">
            <a class="page-scroll" href="#nettrekker"><%= image_tag("ntlogo", :class => "img-responsive logocentered", :alt => "Responsive image") %></a>
          </div>
          <div class="col-md-4 col-sm-4 col-xs-12 portfolio-item">
            <a class="page-scroll" href="#icurio1"><%= image_tag("1.0logomed", :class => "img-responsive logocentered", :alt => "Responsive image") %></a>
          </div>
          <div class="col-md-4 col-sm-4 col-xs-12 portfolio-item">
            <a class="page-scroll" href="#icurio2"><%= image_tag("2.0logomd", :class => "img-responsive logocentered", :alt => "Responsive image") %></a>
          </div>
      </div>
    </div>
<!--HOME SECTION END  -->
  <section id="nettrekker">
    <div class="parallax-like">
        <div class="overlay">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div>
                          <%= image_tag("reverse", :class => "img-responsive logocentered", :alt => "Responsive image") %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="vidsample">
        <div class="container">
          <% @ic2testimonialvideos.each do |video| %>
            <div class="row">
              <div class="col-md-6">
                <div class="embed-responsive embed-responsive-16by9 videopaddingnt">
                  <video controls width="640" height="360" poster="https://s3-us-west-2.amazonaws.com/nettrekker-videos/finalposter1.jpg">
                    <source src= "https://s3-us-west-2.amazonaws.com/nettrekker-videos/Introducing+netTrekker-HD.mp4" type='video/mp4'>
                    <p> To view this video please enable JavaScript, and consider upgrading to a web browser that supports HTML5 video</p>
                  </video>
                </div>
              </div>
              <%end%>
                <div class="col-md-6">
                    <div class="about-text-left">
                        <div class="section-titlent">
                            <h4>netTrekker</h4>
                            <h2><strong>Active </strong>Learning Resources</h2>
                            <hr>
                            <div class="clearfix"></div>
                        </div>
                        <p class="intro">netTrekker delivers the industry-leading digital learning resource library with more than 360,000 educator-curated resources — each one tagged, organized, and aligned to state and Common Core standards so that teachers, students, and parents can find just what they need, quickly and safely.</p>
                        <div class="text-center">
                          <%= link_to ntvids_path, class: "btn btn-primary" do %>
                            VIEW MORE VIDEOS
                            <span class="glyphicon glyphicon-circle-arrow-right" aria-hidden="true" style="padding-left: 5px; padding-top: 5px;"></span>
                          <%end%>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </section>
<!--PARALLAX LIKE / NETTREKKER SECTION END  -->
