                      <div class="text-center">
                        <%= link_to ic1vids_path, class: "btn btn-primary" do %>
                          VIEW MORE VIDEOS
                          <span class="glyphicon glyphicon-circle-arrow-right" aria-hidden="true" style="padding-left: 5px; padding-top: 5px;"></span>
                        <%end%>
                    </div>
                  </div>
              </div>
              <div class="col-md-6">
                <div class="embed-responsive embed-responsive-16by9 videopaddingic1">
