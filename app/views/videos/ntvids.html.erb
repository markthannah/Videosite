<div class="home">
  <%=image_tag("nt top blue band") %>
</div>
</br>
</br>
</br>
<div class="container">
  <div class="border-nt">
    <div class="well well-sm">
      <div class="row">
        <% @ntintrovideos.each do |video| %>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <%= link_to image_tag(video.image.url(:medium)), video %>
            <div class="caption">
              <strong><%= link_to video.title, video %></strong><br/>
              <%= truncate(video.description, :length => 110, :separator => " " )%>
              <% if video.duration.present? %>
                <div class="row">
                  <div class="pull-right">
                    <p class="text-muted"><%=Time.at(video.duration).utc.strftime("%M:%S")%>
                    </p>
                  </div>
                </div>
              <% end %>

              <% if video.user == current_user %>
                <div class="actions">

                  <%= link_to edit_video_path(video) do %>
                    <span class="glyphicon glyphicon-edit"></span>
                    Edit
                  <% end %>

                  <%= link_to video, method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <span class="glyphicon glyphicon-trash"></span>
                    Delete
                  <% end %>

                </div>
              <% end %>
            </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>
</div>
<% end %>
